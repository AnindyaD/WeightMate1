<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.weightmate"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/weightmate_logo_apple"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.weightmate.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.weightmate.CalendarActivity"
            android:label="@string/title_activity_calendar"
            android:parentActivityName="com.example.weightmate.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.weightmate.MainActivity" />
        </activity>
        <activity
            android:name="com.example.weightmate.FoodListActivity"
            android:label="@string/title_activity_food_list"
            android:parentActivityName="com.example.weightmate.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.weightmate.MainActivity" />
        </activity>
        <activity
            android:name="com.example.weightmate.CalculatorActivity"
            android:label="@string/title_activity_calculator"
            android:parentActivityName="com.example.weightmate.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.weightmate.MainActivity" />
        </activity>
        <activity
            android:name="com.example.weightmate.CalculatorResultsActivity"
            android:label="@string/title_activity_calculator_results"
            android:parentActivityName="com.example.weightmate.CalculatorActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.weightmate.CalculatorActivity" />
        </activity>
        <activity
            android:name="com.example.weightmate.ExtrasActivity"
            android:label="@string/title_activity_extras"
            android:parentActivityName="com.example.weightmate.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="MainActivity" />
        </activity>
        <activity
            android:name="com.example.weightmate.BmiCalculatorActivity"
            android:label="@string/title_activity_bmi_calculator"
            android:parentActivityName="com.example.weightmate.ExtrasActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.weightmate.ExtrasActivity" />
        </activity>
        <activity
            android:name="com.example.weightmate.BmiCalculatorResultsActivity"
            android:label="@string/title_activity_bmi_calculator_results"
            android:parentActivityName="com.weightmate.BmiCalculatorActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.weightmate.BmiCalculatorActivity" />
        </activity>
         <activity
            android:name="com.example.weightmate.DailyPlannerActivity"
            android:label="@string/title_activity_daily_planner"
            android:parentActivityName="com.weightmate.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.weightmate.MainActivity" />
        </activity>
    </application>

</manifest>
