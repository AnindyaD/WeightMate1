<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/metricbmicalculatorbackground"
    android:orientation="vertical" >

    <EditText
        android:id="@+id/editText1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="130dp"
        android:layout_marginTop="75dp"
        android:ems="10"
        android:inputType="numberDecimal" />

    <ImageButton
        android:id="@+id/calculateBmiButton"
        android:layout_width="118dp"
        android:layout_height="114dp"
        android:layout_gravity="right"
        android:layout_marginBottom="5dp"
        android:adjustViewBounds="true"
        android:background="#00000000"
        android:scaleType="fitCenter"
        android:src="@drawable/bmicalculatebutton"
        android:onClick="toBmiMetricCalculate" />

    <TextView
        android:id="@+id/bmiHeightTextMetric"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:paddingRight="40dp"
        android:text="@string/bmi_height_metric_text"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/bmiCalcHeightTextFieldMetric"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/bmiWeightTextMetric"
        android:layout_below="@+id/bmiHeightTextMetric"
        android:layout_gravity="right"
        android:layout_marginRight="45dp"
        android:ems="4"
        android:hint="cm"
        android:inputType="numberDecimal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp" >

        <Button
            android:id="@+id/button1"
            android:layout_width="46dp"
            android:layout_height="50dp"
            android:layout_gravity="left"
            android:layout_marginLeft="10dp"
            android:text="Button" />
    </LinearLayout>

    <TextView
        android:id="@+id/bmiWeightTextMetric"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="45dp"
        android:text="@string/bmi_weight_metric_text"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/bmiCalcWeightTextFieldMetric"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="45dp"
        android:ems="4"
        android:hint="kg"
        android:inputType="numberDecimal" >

        <requestFocus />
    </EditText>

</LinearLayout>